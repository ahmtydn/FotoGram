<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#121212">

    <TextView
        android:id="@+id/recycler_row_kullamici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullan覺c覺 Emaili"

        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_marginStart="5sp"
        android:textColor="#ECEAE7"
        >
    </TextView>

    <ImageView

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        android:id="@+id/recycler_row_imageview"
        >
    </ImageView>
    <TextView

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullan覺c覺 Yorumu"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:id="@+id/recycler_row_yorum"
        >
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#47BA09"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"/>

</LinearLayout>

